{
    "version": 3,
    "configurePresets": [
        {
            "name": "common",
            "description": "Common configuration for all platforms",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "installDir": "${sourceDir}/install/${presetName}",
            "cacheVariables": {
                "CMAKE_COLOR_DIAGNOSTICS": "ON"
            }
        },

        {
            "name": "windows",
            "description": "Windows configuration for MSBuild toolchain that apply to msvc and clang",
            "hidden": true,
            "inherits": "common",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "toolset": {
                "value": "host=x64",
                "strategy": "external"
            }
        },
        {
            "name": "linux",
            "description": "Linux OS settings for gcc and clang toolchains",
            "hidden": true,
            "inherits": "common",
            "condition": {
                "type": "inList",
                "string": "${hostSystemName}",
                "list": [ "Linux", "Darwin" ]
            }
        },

        {
            "name": "debug",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_INTERPROCEDURAL_OPTIMIZATION": "ON"
            }
        },
        {
            "name": "coverage",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Coverage"
            }
        },
        {
            "name": "asan",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "ASan"
            }
        },
        {
            "name": "tsan",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "TSan"
            }
        },
        {
            "name": "ubsan",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "UBSan"
            }
        },
        {
            "name": "msan",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "MSan"
            }
        },

        {
            "name": "msvc",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/toolchain/msvc.cmake",
                "CMAKE_PROJECT_TOP_LEVEL_INCLUDES": "${sourceDir}/cmake/build_options/msvc.cmake"
            }
        },
        {
            "name": "gcc",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/toolchain/gcc.cmake",
                "CMAKE_PROJECT_TOP_LEVEL_INCLUDES": "${sourceDir}/cmake/build_options/gcc.cmake"
            }
        },
        {
            "name": "gcc-arm64-cross",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/toolchain/gcc-arm64-cross.cmake",
                "CMAKE_PROJECT_TOP_LEVEL_INCLUDES": "${sourceDir}/cmake/build_options/gcc.cmake",
                "CMAKE_CATCH_DISCOVER_TESTS_DISCOVERY_MODE": "PRE_TEST"
            }
        },
        {
            "name": "clang",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/toolchain/clang.cmake",
                "CMAKE_PROJECT_TOP_LEVEL_INCLUDES": "${sourceDir}/cmake/build_options/clang.cmake"
            }
        },

        {
            "name": "windows-msvc-debug",
            "inherits": [ "windows", "msvc", "debug" ]
        },
        {
            "name": "windows-msvc-release",
            "inherits": [ "windows", "msvc", "release" ]
        },
        {
            "name": "windows-msvc-coverage",
            "inherits": [ "windows", "msvc", "coverage" ]
        },
        {
            "name": "windows-msvc-asan",
            "inherits": [ "windows", "msvc", "asan" ]
        },

        {
            "name": "linux-gcc-debug",
            "inherits": [ "linux", "gcc", "debug" ]
        },
        {
            "name": "linux-gcc-release",
            "inherits": [ "linux", "gcc", "release" ]
        },
        {
            "name": "linux-gcc-coverage",
            "inherits": [ "linux", "gcc", "coverage" ]
        },
        {
            "name": "linux-gcc-asan",
            "inherits": [ "linux", "gcc", "asan" ]
        },
        {
            "name": "linux-gcc-tsan",
            "inherits": [ "linux", "gcc", "tsan" ]
        },
        {
            "name": "linux-gcc-ubsan",
            "inherits": [ "linux", "gcc", "ubsan" ]
        },

        {
            "name": "linux-gcc-arm64-cross-debug",
            "inherits": [ "linux", "gcc-arm64-cross", "debug" ]
        },
        {
            "name": "linux-gcc-arm64-cross-release",
            "inherits": [ "linux", "gcc-arm64-cross", "release" ]
        },
        {
            "name": "linux-gcc-arm64-cross-coverage",
            "inherits": [ "linux", "gcc-arm64-cross", "coverage" ]
        },
        {
            "name": "linux-gcc-arm64-cross-asan",
            "inherits": [ "linux", "gcc-arm64-cross", "asan" ]
        },
        {
            "name": "linux-gcc-arm64-cross-tsan",
            "inherits": [ "linux", "gcc-arm64-cross", "tsan" ]
        },
        {
            "name": "linux-gcc-arm64-cross-ubsan",
            "inherits": [ "linux", "gcc-arm64-cross", "ubsan" ]
        },

        {
            "name": "linux-clang-debug",
            "inherits": [ "linux", "clang", "debug" ]
        },
        {
            "name": "linux-clang-release",
            "inherits": [ "linux", "clang", "release" ]
        },
        {
            "name": "linux-clang-coverage",
            "inherits": [ "linux", "clang", "coverage" ]
        },
        {
            "name": "linux-clang-asan",
            "inherits": [ "linux", "clang", "asan" ]
        },
        {
            "name": "linux-clang-tsan",
            "inherits": [ "linux", "clang", "tsan" ]
        },
        {
            "name": "linux-clang-ubsan",
            "inherits": [ "linux", "clang", "ubsan" ]
        },
        {
            "name": "linux-clang-msan",
            "inherits": [ "linux", "clang", "msan" ]
        },

        {
            "name": "vs2022",
            "inherits": [ "windows", "msvc" ],
            "architecture": "x64",
            "toolset": "host=x64",
            "generator": "Visual Studio 17 2022"
        }
    ]
}